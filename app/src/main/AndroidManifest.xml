<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taller2">
        <activity
            android:name=".screens.GameScreen"
            android:exported="false"
            android:label="@string/title_activity_game_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.JoinRoomScreen"
            android:exported="false"
            android:label="@string/title_activity_join_room_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.WaitingRoomScreen"
            android:exported="false"
            android:label="@string/title_activity_waiting_room_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.CreateRoomScreen"
            android:exported="false"
            android:label="@string/title_activity_create_room_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.ui.theme.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.RegisterScreen"
            android:exported="false"
            android:label="@string/title_activity_register_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".screens.LoginScreen"
            android:exported="false"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Taller2" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Taller2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
